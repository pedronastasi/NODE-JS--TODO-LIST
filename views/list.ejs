<%- include("header") -%>

    <body>
        <div class="box" id="heading">
            <h1>
                <%= listTitle %>
            </h1>

        </div>

        <div class="box">

            <% newListItems && newListItems.forEach((item)=>{ %>
                <div class="item">
                    <input type="checkbox" onchange="window.location = '/delete/<%=item._id%>?list=<%=listTitle%>'">
                    <p>
                        <%= item.name%>
                    </p>
                    <!-- <a href="/delete/<%=item._id%>">DELETE</a> -->
                </div>

                <% }) %>

                    <input type="hidden" name="listName" valur="<%= listTitle %> "></input>
                    <form class="item" action="" method="post" action="/<%=listTitle%> ">
                        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
                        <button type="submit" name="button" value=<%=listTitle %> >+</button>

                    </form>
        </div>

    </body>

    <%- include("footer") -%>